%define name @PACKAGE@
%define version @VERSION@
%define release 1

Summary: PacWars2
Name: %{name}
Version: %{version}
Release: %{release}
Source0: %{name}-%{version}.tar.gz
URL: http://pw2.tsx.org
Copyright: GPL
Group: Games
BuildRoot: /var/tmp/%{name}-buildroot
Prefix: /usr/local/games/pw2
Packager: Alexander Pipelka <pipelka@teleweb.at>

%description
PacWars2

%prep
rm -rf ${RPM_BUILD_ROOT}

%setup

%build
CFLAGS="$RPM_OPT_FLAGS" ./configure --prefix=/usr/local/games/pw2
make

%install
rm -rf $RPM_BUILD_ROOT
make install prefix=$RPM_BUILD_ROOT/usr/local/games/pw2

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
/usr/local/games/pw2/

%changelog
